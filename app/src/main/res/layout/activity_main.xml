<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ge.ee.eewh.MainActivity"
    android:background="#101215"
    >

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:orientation="horizontal"
        android:id="@+id/linearLayout"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp">
        <TextView
            android:id="@+id/TextUserFullName"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:textAlignment="center"
            android:textSize="17dp"
            android:text="სატესტო მომხმარებელი"
            android:textColor="#FFF"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="3dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="3dp"
           />

    </RelativeLayout>


    <Button
        android:id="@+id/btn_sale"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:textSize="20dp"
        android:textColor="#FFF"
        android:textStyle="bold"
        android:background="@drawable/btn_skyblue_shape_norm"
        android:text="გაყიდვა მაღაზია"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:onClick="btn_click"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <Button
        android:id="@+id/btn_purchase"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:textSize="20dp"
        android:background="@drawable/btn_blue_shape_norm"
        android:text="შესყიდვა"
        android:textColor="#FFF"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/btn_sale"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:onClick="btn_click"/>

    <Button
        android:id="@+id/btn_move"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:textColor="#FFF"
        android:textStyle="bold"
        android:background="@drawable/btn_move_all"
        android:text="გადაწერა"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_purchase"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:onClick="btn_click"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <Button
        android:id="@+id/btn_sale_dealer"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:textColor="#FFF"
        android:textStyle="bold"
        android:background="@drawable/btn_sell_all"
        android:text="გაყიდვა დილერი"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_move"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:onClick="btn_click"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <Button
        android:id="@+id/btn_return_sale"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:textColor="#FFF"
        android:textStyle="bold"
        android:background="@drawable/btn_yellow_all"
        android:text="გაყიდვის უკან დაბრუნება"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_sale_dealer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:onClick="btn_click"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />
    <Button
        android:id="@+id/btn_PdaPurchase_return"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:textColor="#FFF"
        android:textStyle="bold"
        android:background="@drawable/btn_buy_all"
        android:text="შესყიდვის უკან დაბრუნება"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_return_sale"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:onClick="btn_click"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />
</android.support.constraint.ConstraintLayout>
